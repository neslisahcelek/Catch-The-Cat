<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="230dp"
        android:layout_height="84dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Time: 0"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:hint="Score: 0"
            android:textAlignment="center"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="restart"
        android:text="RESTART"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="411dp"
        android:layout_height="611dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageViewCat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat4"
            app:layout_row="3"
            app:layout_column="2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat6"
            app:layout_row="1"
            app:layout_column="0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat7"
            app:layout_row="1"
            app:layout_column="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat8"
            app:layout_row="2"
            app:layout_column="0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat9"
            app:layout_row="1"
            app:layout_column="3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat10"
            app:layout_row="4"
            app:layout_column="4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat11"
            app:layout_row="4"
            app:layout_column="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat12"
            app:layout_row="5"
            app:layout_column="3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat13"
            app:layout_row="5"
            app:layout_column="0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat14"
            app:layout_row="6"
            app:layout_column="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat15"
            app:layout_row="6"
            app:layout_column="4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />
        <ImageView
            android:id="@+id/imageViewCat16"
            app:layout_row="0"
            app:layout_column="4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cat" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>